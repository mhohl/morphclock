       z2 = ((0.4d-0.15)*u,0);
       z23 = z4 = (0.25u,0);
       z3 = ((-0.25+0.5d)*u,-0.85u);
       z5 = ((0.25+0.15d*d)*u,0);
       

       draw z1 .. tension 100 .. z12 .. tension t .. {dir 180}z2 -- cycle;
       draw z2{dir 0}  ..  z23 .. tension t .. z3;
       draw z4 -- z5;
       
    endfig;
