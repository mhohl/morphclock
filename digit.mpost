for i = 701 upto 730:
    beginfig(i);
       numeric tmp;
       pair inter;
       path seven;
    
       draw_grid(u);
       pickup pc;
       f := (i-700)/30;
       
       z1 = (0.4u,1u);
       z21 = (0.1u,0.15u);
       z2 = (0u,-0.75u);
       z13 = (-0.4u,1u);
       z3 = (-0.4u,(0.75+0.25f)*u); % wandert zu z31 und ersetzt diesen
         
       seven := z2 .. tension 1 .. z21 .. tension 1 .. z1{up} -- z13 -- z3;
       
       inter := ((-infinity,0)--(infinity,0)) intersectionpoint seven;
       tmp := xpart( inter );
       
       z4 = (tmp+(-0.25u-tmp)*f,0);
       z5 = (tmp+(0.25u-tmp)*f,0);
       
       draw seven;
       draw z4 -- z5; 
      
    endfig;
endfor

