%
% Spezielle Übergänge:
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%
% Zwei -> Null
%
for i = 2001 upto 2030:
    beginfig(i);
       draw_grid(u);
       pickup pc;
       f := (i-2000)/30;
       m := f;
       t := 2-m;
       
       tmppath := two[BEGIN] .. two[TOP] .. two[R_ARC];
       aux0 := direction 0 of tmppath;
       phi1 := m[angle(aux0),90];
       
       draw m[two[BEGIN],zero[LEFT]]{dir phi1}
        .. m[two[TOP],zero[TOP]]
        .. m[two[R_ARC],zero[RIGHT]]
        .. tension t .. m[two[JOINT],zero[BOTTOM]];
       draw two[JOINT] -- two[END];
    endfig;
endfor

% Ursprünglicher Winkel bei zero[BOTTOM] ist nicht
% von einem Parameter abhängig:
tmppath := zero[LEFT]{up}
                  .. zero[TOP]
                  .. zero[RIGHT]
                  .. zero[BOTTOM];
aux3 := direction 3 of tmppath;

for i = 2031 upto 2059:
    beginfig(i);
       draw_grid(u);
       pickup pc;
       f := (i-2030)/30;
       m := f;
       
       phi1 := m[angle(aux3),-180]; 
       
       tmppath := zero[BOTTOM]{left} .. m[two[JOINT],zero[LEFT]];
       aux1 := direction 1 of tmppath;
