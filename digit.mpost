%
% digits
%
% die Bilder werden in der Form digit.xnn erzeugt,
% wobei x von 0 bis 9 läuft und nn von 00 bis 59.
%
% von 01 bis 30 Veränderung der alten Form, von 31 bis 59
% Veränderung zur neuen, bei 00 dann neue Form
%
numeric f;   % [f]rame rate
numeric m;   % [m]orph factor
numeric t;   % [t]ension
numeric phi; % rotation angle [phi]
numeric u;   % [u]nit
u := 5cm;
numeric d,q;
pair C;      % [C]enter of rotation
C := (0,0.5u);
pen pc;      % [p]en[c]ircle
pc := pencircle scaled 0.1u;

%
% TODO:
%
% * die Drei unten bauchiger
% * Übergang 3/4 besser
% * Rundungen und Positionen
% * Geschwindigkeit der Übergänge: langsam von der Ziffer weg, schnell zur nächsten hin
% * Koordinatenbruch 4/5
%

def draw_grid(expr u) =
    draw (-0.6u,-u) -- (-0.6u,2u) -- (0.6u,2u) -- (0.6u,-u) -- cycle;
    draw (-0.6u,0) -- (0.6u,0);
    draw (-0.6u,u) -- (0.6u,u);
    draw (-0.25u,-u)--(-0.25u,2u);
    draw (0.25u,-u)--(0.25u,2u);
enddef;

def accel(expr x) = sqrt x enddef;

def decel(expr x) = x*x enddef;

%
% Null
%
beginfig(000);
   draw_grid(u);
   pickup pc;

   z21 = (0.25u,0.5u);
   z12 = (-0.25u,0.5u);
   z1 = (0,u);
   z2 = (0,0);

   draw z1 .. z12 .. z2 .. z21  .. cycle;
endfig;

%
% Null -> Eins (1/2)
%
for i = 001 upto 030:
    beginfig(i);
       draw_grid(u);
       pickup pc;

       f := i/30;
       m := f;
       z21 = ((0.25-0.245m)*u,0.5u); %.245 statt .25 um einen Glitch (i=30) zu vermeiden
       z12 = ((-0.25+0.245m)*u,0.5u);
       z1 = (0,u);
       z2 = (0,0);

       draw z1 ... z12 ... z2 ... z21 ... cycle;
    endfig;
endfor

