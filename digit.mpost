%
% digits
%
% die Bilder werden in der Form digit.xnn erzeugt,
% wobei x von 0 bis 9 l채uft und nn von 00 bis 59.
%
% von 01 bis 30 Ver채nderung der alten Form, von 31 bis 59
% Ver채nderung zur neuen, bei 00 dann neue Form
%
numeric d,phi,q,t,u;
pair C;
pen pu;
u := 10cm;
C := (0,0.5u);
pu := pencircle scaled 0.1u;

beginfig(000);
   draw (-u,-u)--(-u,u)--(u,u)--(u,-u)--cycle; draw (-u,0)--(u,0);
   pickup pencircle scaled 0.1u;
         
   z21 = (0.25u,0.5u);
   z12 = (-0.25u,0.5u);
   z1 = (0,u);
   z2 = (0,0);
       
   draw z1 .. z12 .. z2 .. z21  .. cycle;
      
endfig;

for i = 001 upto 030:
    beginfig(i);
       draw (-u,-u)--(-u,u)--(u,u)--(u,-u)--cycle; draw (-u,0)--(u,0);
       pickup pencircle scaled 0.1u;
       d := i/30;
       
       z21 = ((0.25-0.245d)*u,0.5u); %.245 statt .25 um einen Glitch (i=30) zu vermeiden
       z12 = ((-0.25+0.245d)*u,0.5u);
       z1 = (0,u);
       z2 = (0,0);
       
       draw z1 ... z12 ... z2 ... z21 ... cycle;
      
    endfig;
endfor

for i = 031 upto 059:
    beginfig(i);
       draw (-u,-u)--(-u,u)--(u,u)--(u,-u)--cycle; draw (-u,0)--(u,0);
       pickup pencircle scaled 0.1u;
       d := (i-30)/30;
       
       z1 = (-0.25d*u,(1-0.25d)*u);
       z2 = (0,u); % war z1
       z3 = (0,0); % war z2
       
       draw z1 -- z2 -- z3;
      
    endfig;
endfor

beginfig(100);
