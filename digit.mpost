       pickup pencircle scaled 0.1u;
       
       d := (i-300)/30;
       t := 100*d*d*d; if t < 1: t := 1 fi;

       z1 = ((0.1*d-0.25)*u,(0.85-0.85d)*u);
       z12 = (0.25u,0.75u);
       z2 = (-0.15u,0);
       z23 = (0.25u,(-0.75+0.75d)*u);
       z3 = (-0.25u,-0.85u);

       draw z1 .. tension t .. z12 .. {dir 180}z2 if i=330: .. cycle fi;
       
       draw z2{dir 0}  ..  z23 .. z3;
       
