       % Viertelsegment der Null werden:

       tmppath := zero[BOTTOM]{left} .. zero[LEFT]{up};
       phi0 := 270-angle(zero[LEFT]-zero[BOTTOM]);
       
       aux[JOINT] := m[three[JOINT],zero[BOTTOM]];
       aux[D_ARC] := (point 0.5 of tmppath) rotatedabout (zero[BOTTOM],phi0); 
       aux[END]   := zero[LEFT] rotatedabout(zero[BOTTOM],phi0);

       draw m[three[BEGIN],zero[LEFT]]{dir phi1}
            .. m[three[TOP],zero[TOP]]
            .. m[three[U_ARC],zero[RIGHT]]
            .. aux[JOINT]{dir phi2};
       draw aux[JOINT]
            .. m[three[D_ARC],aux[D_ARC]]
            .. m[three[END],aux[END]];
    endfig;
endfor

