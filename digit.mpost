       pickup pencircle scaled 0.1u;
       d := (i-100)/30;
       z1 = (-0.25u,0.75u + 0.05d*u);
       z12 = (d*0.25u,(1-0.25d)*u);
       z2 = (-d*0.25u,0);
   
       draw z1 -- z12 -- z2;
    endfig;
