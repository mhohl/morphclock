   draw z2 ..tension 1 .. z21 .. tension 1 .. z1{up} -- z13 -- z3;
      
endfig;

for i = 701 upto 730:
    beginfig(i);
       numeric tmp;
       pair inter;
       path seven;
    
       draw (-u,-u)--(-u,u)--(u,u)--(u,-u)--cycle; draw (-u,0)--(u,0);
       pickup pencircle scaled 0.1u;
       d := (i-700)/30;
       
       z1 = (0.4u,1u);
       z21 = (0.1u,0.15u);
       z2 = (0u,-0.75u);
       z13 = (-0.4u,1u);
       z3 = (-0.4u,(0.75+0.25d)*u); % wandert zu z31 und ersetzt diesen
         
       seven := z2 .. tension 1 .. z21 .. tension 1 .. z1{up} -- z13 -- z3;
       
       inter := ((-infinity,0)--(infinity,0)) intersectionpoint seven;
       tmp := xpart( inter );
       
       z4 = (tmp+(-0.25u-tmp)*d,0);
       z5 = (tmp+(0.25u-tmp)*d,0);
       
       draw seven;
       draw z4 -- z5; 
      
    endfig;
endfor

for i = 731 upto 759:
