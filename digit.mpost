       aux[MID]   := ((-infinity,0)--(infinity,0)) intersectionpoint tmppath;
       aux[LEFT]  := aux[MID] - (0.15u,0);
       aux[RIGHT] := aux[MID] + (0.15u,0);

       draw tmppath;
       draw m[aux[MID],aux[LEFT]] -- m[aux[MID],aux[RIGHT]];
