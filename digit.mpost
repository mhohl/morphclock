       d := (i-600)/30;
       q := 2*d*d -2d +1; % Parabelabschnitt, der im Bereich d = 0...1 die Werte 1 ... 0.5 ... 1 체berstreicht
       phi := 180d;
       z1 = (-0.4u,0.5u) rotatedaround (C,phi);
       z21 = z12 = (-0.1u,(0.75q +0.5)*u) rotatedaround (C,phi);
       z2 = (0.25u,(1q + 0.5)*u) rotatedaround (C,phi);
       z13 = (0.4u,0.6u) rotatedaround (C,phi/2);
       z3 = ((-0.4+0.25d)*u,(0.5+0.1d)*u);
       
       draw z2 .. z21 .. z1{dir (phi-90)} .. z13  .. z3;
       
    endfig;
