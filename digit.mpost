       z45 = (0,0.9d*u);
       z5 = ((0.25+0.15d)*u,(-0.5d+0.9d)*u);
       
       draw z2 ..tension 1 .. z21 .. tension 1 .. z1{up} .. tension t .. z3;
       draw z4{down} .. tension tt .. z45 .. tension tt .. {down}z5;
       
    endfig;
endfor

