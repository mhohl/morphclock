       pickup pc;
       f := (i-0100)/30;
       m := f;

       draw zero[TOP]
            ... (m/2)[zero[RIGHT],zero[LEFT]]
            ... zero[BOTTOM]
            ... (m/2)[zero[LEFT],zero[RIGHT]]
            ... cycle;
    endfig;
endfor

for i = 0130 upto 0159:
    beginfig(i);
       draw_grid(u);
       pickup pc;
       f := (i-0130)/30;
