       m := advanced(f);

       tmppath0 := _e_[RIGHT]{up}
                   .. _c_[BEGIN]
                   .. _e_[TOP]
                   .. _e_[LEFT]
                   .. _e_[BOTTOM]
                   .. _e_[END];
                   
       draw subpath (m,5) of tmppath0;

       setbounds currentpicture to boundingpath;
    endfig;
