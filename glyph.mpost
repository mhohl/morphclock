           .. tension t .. m[_n_[END],_b_[RIGHT]]{down}
           .. m[_n_[END],_b_[BOTTOM]]
           .. m[_n_[END],_b_[D_ARC]];

       setbounds currentpicture to boundingpath;
    endfig;
endfor


